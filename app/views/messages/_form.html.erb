<%= form_for(@message) do |f| %>
	<% if @message.errors.present? %>
		<div class="alert alert-danger">
		<%= alert %>
			<ul>
				<% @message.errors.full_messages.each do |m| %>
					<li>
						<%= m %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
        <label>名前：</label>
        <%= f.text_field :name %>
    </div>
    <div>
        <label>年齢：</label>
        <%= f.text_field :age %>
    </div>
    <div>
        <label>内容：</label>
        <%= f.text_area :body, :size => "20x10" %>
    </div>
    <%= f.submit :class => "btn btn-sm btn-primary" %>
<% end %>

