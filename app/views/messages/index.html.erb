<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |m| %>
            <div class="row">
                <div class="label label-info name-content">
                <%= m.name %>(<%= m.age %>)
                </div>
                <div class="textarea-content">
                <%= m.body %>
                </div>
                <div class="edit-btn">
                    <%= link_to "edit", edit_message_path(m) %>
                </div>
                <div class="destroy-btn">
                    <%= link_to "destroy", m, method: :delete, data: {confirm: "#{m.name}の#{m.body}を削除してもよろしいですか？" } %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<%= render "form" %>