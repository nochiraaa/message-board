<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |m| %>
            <div class="row">
                <div class="label label-info name-content">
                <%= m.name %>    
                </div>
                <div class="textarea-content">
                <%= m.body %>
                </div>
                <div class="edit-btn">
                    <%= link_to "edit", edit_message_path(m) %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<%= render "form" %>