<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |m| %>
            <div class="row">
                <div class="label label-info name-content">
                <%= m.name %>    
                </div>
                <div class="textarea-content">
                <%= m.body %>
                </div>
            </div>
        <% end %>
    </div>
</div>



<%= form_for(Message.new) do |f| %>
<div>
<label>名前：</label>
<%= f.text_field :name %>
</div>
<div>
<label>内容：</label>
<%= f.text_area :body, :size => "20x10" %>
</div>
<%= f.submit %>

<% end %>
